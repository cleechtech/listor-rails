<%= render 'partials/alerts' %>

<section class="main-content">
  <div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-6">
            <%= render 'form' %>
        </div>
     <div class="col-md-6 col-sm-6 col-xs-6">
        <div class="page-sub-title textcenter">
          <h2 class="page-header">Manage Jobs <%= link_to 'Create New',  new_job_path, class:'btn btn-success pull-right'%></h2> 
        </div><!-- end .page-sub-title -->
      <% if @jobs.exists? %>
            <table class="table table-striped">
                <tr>
                  <th>Title</th>
                  <th>Salary</th>
                  <th>Company</th>
                  <th>Create Date </th>
                  <th>Edit</th>
                  <th>Delete</th>
              </tr>
              <% @jobs.each do |job| %>
                <tr>
                    <td><%= job.title %></td>
                    <td><%= job.salary %></td>
                    <td><%= job.company.name %></td>
                    <td><%= job.created_at.to_time.strftime('%B %e at %l:%M %p' ) %></td>
                   <td><%= link_to 'Edit', edit_job_path(job), class: 'btn btn-primary' %></td>
                   <td><%= link_to 'Delete', job_path(job), class: 'btn btn-danger', method: :delete, data: { confirm: "Are you sure?" } %></td>
                </tr>
            <% end %>
            </table>
            <%= will_paginate @jobs %>
            <% else %>
                <p>There are no jobs</p>
            <% end %>
        </div>
      </div>
      </div><!-- end .col-md-6 col-sm-6 col-xs-6 -->
  </div><!-- Closes row -->
</div><!-- Closes container -->
</section>
