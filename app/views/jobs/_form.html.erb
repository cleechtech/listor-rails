<%= form_for @jobs, html: {class: "comment-form"} do |f| %>
    <%= render 'form_error', resource: f.object %>
    <div class="form-group">
        <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
    </div>
    <div class="form-group">
        <%= f.text_area :description, class: 'form-control', placeholder: 'Description' %>
    </div>
    <div class="form-group">
        <%= f.number_field :salary, class: 'form-control', placeholder: 'Salary' %>
    </div>
    <div class="form-group">
        <%= f.text_area :notes, class: 'form-control', placeholder: 'Notes' %>
    </div>
     <div class="form-group">
        <%= f.label :year %><br />
        <%= f.select :company_id, Company.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select One'}, class:'form-control' %><br />
    </div>
    <%= f.button :submit, class:'button button-default', 'data-text': 'SUBMIT' do %>
        <span>SUBMIT</span>
    <% end %>
