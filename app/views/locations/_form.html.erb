<%= form_for([@user, @location], html: {class: "comment-form"}) do |f| %>
    <%= render 'form_error', resource: f.object %>
    <div class="form-group">
        <%= f.text_field :city, class: 'form-control', placeholder: 'City Name' %>
    </div>
    <div class="form-group">
        <%= f.text_field :state, class: 'form-control', placeholder: 'State Name' %>
    </div>
    <div class="form-group">
        <%= f.text_field :zip, class: 'form-control', placeholder: 'Zip Code' %>
    </div>
    <%= f.button :submit, class:'button button-default', 'data-text': 'SUBMIT' do %>
        <span>SUBMIT</span>
    <% end %>
