<%= form_for @company, html: {class: "comment-form"} do |f| %>
    <%= render 'form_error', resource: f.object %>
    <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
    </div>
     <div class="form-group">
        <%= f.select :locations, Location.all.collect {|x| [x.city, x.id]}, {include_blank: 'Select Location'}, class:'form-control' %><br />
    </div>
    <%= f.button :submit, class:'button button-default', 'data-text': 'SUBMIT' do %>
        <span>SUBMIT</span>
    <% end %>
